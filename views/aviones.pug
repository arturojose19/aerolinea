extends layout

block content
    .body.body-bg
        .container
            nav.navbar
                .table-container
                    table.table.bg-white.table-striped
                        thead.thead
                            tr 
                                th(scope='col') ID Avion
                                th(scope='col') Modelo
                                th(scope='col') Estado
                                th(scope='col')
                                th(scope='col')
                                
                        tbody
                        - for (var i = 0; i < aviones.length; i++)
                            tr
                                th #{aviones[i].ID}
                                td #{aviones[i].modelo}
                                td #{aviones[i].Estado}
                                td
                                    form(action=`eliminarAvion/${aviones[i].ID}`,method="POST")
                                        button.btn.btn-outline-danger(type='submit') Eliminar
                                td
                                    form(action=`eliminarAvion/${aviones[i].ID}`,method="POST")
                                        button.btn.btn-outline-danger(type='submit') Modificar
                .bottom
                    a.bottom-row
                        button.button(data-toggle="modal" data-target="#registrar") Registrar Avion
                        #registrar.modal.fade(tabindex='-1', role='dialog', aria-labelledby='registrar', aria-hidden='true')
                            .modal-dialog.modal-dialog-scrollable(role='document')
                                .modal-content
                                    .modal-header.thead
                                        h5#registrar.modal-title Registrar Avion
                                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                                        span(aria-hidden='true') Ã—
                                    .modal-body.thead
                                        form(method="POST" action="/Aviones")
                                            hr
                                            .form-group
                                                label(for='modelo')
                                                b.t2 Modelo   
                                                input(type='text' aria-describedby='modelo' placeholder='Ingresar Modelo' name='modelo' required='' id='modelo')
                                            .form-group
                                                label(for='ID')
                                                b.t2 ID   
                                                input(type='number' aria-describedby='id' placeholder='Ingresar ID' name='ID' required='' id='ID')
                                            .form-group
                                                label(for='Estado')
                                                b.t2 Estado   
                                                input(type='text' aria-describedby='estado' placeholder='Ingresar estado' name='Estado' required='' id='Estado')
                                            button.btn.btn-outline-danger(type='submit') Registrar
                                    .modal-footer.thead
                                        button.btn.btn-outline-danger(type='submit') Registrar
                    a.bottom-row.link(href='/updateAvion')
                        button.button Modificar Avion
                                
            
                    